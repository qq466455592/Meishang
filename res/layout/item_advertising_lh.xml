<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent_white"
    android:orientation="horizontal"
    android:padding="10dp" >

    <TextView
        android:id="@+id/h_tv_qbuy_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="即将开抢"
        android:textColor="@color/orange1"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/h_layout_qbuy_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/h_tv_qbuy_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="距开抢时间还有"
            android:textColor="@color/orange1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/h_tv_qbuy_time_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="时 "
            android:textColor="@color/orange1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/h_tv_qbuy_time_minite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="分 "
            android:textColor="@color/orange1"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/h_tv_qbuy_time_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="秒 "
            android:textColor="@color/orange1"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>