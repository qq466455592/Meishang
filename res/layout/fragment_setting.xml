<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg"
    android:orientation="vertical" >

    <include layout="@layout/layout_top_back" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/feedback"
                style="@style/setting_text_style"
                android:onClick="onclick"
                android:text="意见反馈" />

            <!--
                 <TextView
                android:id="@+id/push_switch_tv"
                style="@style/setting_text_style"
                android:layout_marginTop="1dp"
                android:onClick="onclick"
                android:text="推送开关" />
            -->
            <TextView
                android:id="@+id/clear_cache"
                style="@style/setting_text_style"
                android:layout_marginTop="1dp"
                android:text="清除缓存" />

            <TextView
                android:id="@+id/version_update"
                style="@style/setting_text_style"
                android:layout_marginTop="1dp"
                android:text="版本更新（已是最新版本）" />

            <TextView
                android:id="@+id/newbie_help"
                style="@style/setting_text_style"
                android:layout_marginTop="1dp"
                android:text="新手帮助" />

            <TextView
                android:id="@+id/about_us"
                style="@style/setting_text_style"
                android:layout_marginTop="1dp"
                android:text="关于我们" />

            <TextView
                android:id="@+id/service_tel"
                style="@style/setting_text_style"
                android:layout_marginTop="1dp"
                android:onClick="onclick"
                android:text="客服电话" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/bg_fillet_green"
                android:gravity="center"
                android:onClick="onclick"
                android:padding="15dp"
                android:text="注销"
                android:textColor="@color/white"
                android:textSize="@dimen/top_name_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>