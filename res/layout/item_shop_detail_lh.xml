<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/item_image"
            style="@style/item_image"
            android:scaleType="fitXY"
            android:src="@drawable/loading_bg_img_item" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/item_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:text="爱茜茜里吴中路店"
                android:textColor="@color/black1"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <RatingBar
                    android:id="@+id/ratingbar"
                    style="@style/Widget.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.4"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/item_tv_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="8.0"
                    android:textColor="@color/font_orange"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:singleLine="true"
                android:text="￥35/人"
                android:textColor="@color/black3"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>

    <View style="@style/line_horizontal_style" />

    <TextView
        android:id="@+id/item_tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_white"
        android:drawableLeft="@drawable/ic_shop_location"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:singleLine="true"
        android:text="闵行区吴中路369号吴中路店"
        android:textColor="@color/black2"
        android:textSize="14sp" />

    <View style="@style/line_horizontal_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent_white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_tv_tel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_shop_number"
            android:gravity="center_vertical"
            android:onClick="onclick"
            android:padding="10dp"
            android:singleLine="true"
            android:text="021-12345678"
            android:textColor="@color/black2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_tv_business_hours"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_shop_open_time"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:singleLine="true"
            android:text="06:00-21:30"
            android:textColor="@color/black2"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/transparent_white"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:singleLine="true"
            android:text="本店优惠"
            android:textColor="@color/black1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_has_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:singleLine="true"
            android:text="暂无"
            android:textColor="@color/black3"
            android:textSize="1sp"
            android:visibility="gone" />
    </LinearLayout>

    <View style="@style/line_horizontal_style" />

</LinearLayout>